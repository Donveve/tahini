<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header', :count=>@recipe.errors.count) %></h2>
      <p><%= t('errors.template.body') %></p>
      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :size=>60 %>
  </div>
  <div class="field">
    <%= f.label :yields %><br>
    <%= f.text_field :yields %>
  </div>  
  
  <div class="field">
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients_text, :rows=>10, :cols=>50 %>
  </div>   
  
  
  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>
