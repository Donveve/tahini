<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Yields</th>
      <th></th>
      <th></th>
      <!--<th>Add to shopping list</th>-->
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, recipe %></td>
        <td><%= recipe.yields %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <!--<td><%= render(:partial => "add_to_shopping_list") %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

